page {
  background-color: #f2f2f2;
}
.evaluate {
  background-color: #fff;
  padding: 40rpx;
}
.evaluate > .title{
  font-size: 44rpx;
  line-height: 60rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.evaluate > .desc {
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0,0,0,0.30);
  margin-bottom: 80rpx;
}

.question-item {
  margin-bottom: 50rpx;
}
.question-item > .topic {
  line-height: 48rpx;
  margin-bottom: 40rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(0,0,0,0.60);
}
.radio-group > .radio {
  display: block;
  margin-bottom: 30rpx;
}
.radio-group > .radio > radio {
  display: none;
}
.radio-group > .radio > text {
  display: block;
  padding-left: 56rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  color: rgba(0,0,0,0.60);
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-position: left 3rpx;
  background-size: 36rpx 36rpx;
}
.radio-group > .radio > radio:checked + text {
  background-image: url(data:image/png;base64,);
}

.result {
  padding: 40rpx;
}
.result > .btn {
  width: 360rpx;
}
.result-wrap {
  padding: 20rpx;
  background-color: #fff;
  text-align: center;
  margin-bottom: 120rpx;
}
.result-wrap > view {
  border: 1px dashed #E8E8E8;
}
.result-wrap > view:not(:last-child) {
  border-bottom: none;
}

.result-wrap > .title {
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: rgba(0,0,0,0.60);
} 
.result-wrap > .score {
  padding: 40rpx 0;
  line-height: 42rpx;
  font-size: 30rpx;
  color: rgba(0,0,0,0.60);
}
.result-wrap > .score > text:first-child {
  display: block;
  font-size: 72rpx;
  line-height: 86rpx;
  color: #5C9965;
  margin-bottom: 10rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 42rpx;
  margin: 20rpx 30rpx;
  font-size: 30rpx;
  color: rgba(0,0,0,0.60);
}
.detail-item .right-num {
  color: #5C9965;
}
.detail-item .error-num {
  color: #C76767;
}

.explain {
  height: 128rpx;
  line-height: 128rpx;
  font-size: 34rpx;
}